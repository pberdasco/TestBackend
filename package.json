{
  "name": "inversiones-back",
  "version": "1.0.0",
  "description": "Back para inversiones, centrada en definir los estandares de apis crud y otras con seguridad",
  "license": "ISC",
  "author": "Pablo Berdasco",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start:docker": "node src/server.js",
    "dev:docker": "node --watch src/server.js",

    "start": "node --env-file=.env src/server.js",
    "dev": "node --env-file=.env --watch src/server.js",

    "test": "cross-env NODE_ENV=test USE_AUTHENTICATION=false USE_AUTHORIZATION=false node --env-file=.env.test ./node_modules/vitest/vitest.mjs run",
    "test:i": "cross-env NODE_ENV=test USE_AUTHENTICATION=false USE_AUTHORIZATION=false node --env-file=.env.test ./node_modules/vitest/vitest.mjs",

    "test:docker": "cross-env NODE_ENV=test USE_AUTHENTICATION=false USE_AUTHORIZATION=false vitest run",
    "test:docker-i": "cross-env NODE_ENV=test USE_AUTHENTICATION=false USE_AUTHORIZATION=false vitest"
  },

  "esLintConfig": {
    "extends": "semistandard"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "semistandard": "^17.0.0",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  }
}
